{
  "name": "casparplayer",
  "version": "1.0.0",
  "description": "Professional CasparCG broadcast playout client",
  "main": "src/main/main.js",
  "overrides": {
    "tar": "^7.5.3"
  },
  "scripts": {
    "start": "npm run webpack && electron .",
    "dev": "npm run webpack:watch & electron . --dev",
    "webpack": "webpack --mode=production",
    "webpack:watch": "webpack --mode=development --watch",
    "build": "npm run webpack && electron-builder",
    "build:win": "npm run webpack && electron-builder --win",
    "build:mac": "npm run webpack && electron-builder --mac",
    "build:linux": "npm run webpack && electron-builder --linux"
  },
  "keywords": [
    "casparcg",
    "broadcast",
    "playout",
    "video"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "casparcg-connection": "^6.3.3",
    "chokidar": "^3.5.3",
    "mpegts.js": "^1.8.0",
    "node-osc": "^9.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tslib": "^2.6.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron": "^35.7.5",
    "electron-builder": "^26.4.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.casparcg.casparplayer",
    "productName": "CasparPlayer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "public/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    }
  }
}
